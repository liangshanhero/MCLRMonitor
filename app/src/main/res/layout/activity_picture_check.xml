<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e7e4e4">
<!--摄像头部分-->
    <LinearLayout
        android:id="@+id/select_picture"
        android:background="#fff"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <cn.edu.scau.cmi.colorCheck.view.CameraPictureSurfaceView
            android:id="@+id/picture_check_surface"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="300dp" />

    </LinearLayout>

<!--检测项目部分-->
    <LinearLayout
        android:background="#fff"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="15sp"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="检测项目："/>
            <Spinner
                android:ellipsize="marquee"
                android:spinnerMode="dialog"
                android:id="@+id/picture_check_project_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </Spinner>
        </LinearLayout>

    </LinearLayout>
<!--检测规则部分-->
    <LinearLayout
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="15sp"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="检测规则："/>
            <Spinner
                android:ellipsize="marquee"
                android:spinnerMode="dialog"
                android:id="@+id/picture_check_rule_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </Spinner>
        </LinearLayout>

    </LinearLayout>
<!--测试从后台获取数据-->
    <!--<TextView
        android:id="@+id/picture_check_project_asyncTask_result"
