<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.edu.scau.cmi.colorCheck">

    <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/rgb"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="cn.edu.scau.cmi.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.collect.PointSampleCollectActivity" />
        <activity android:name=".activity.test.Main2Activity4Test" />
        <activity android:name=".activity.check.PointCheckActivity" />
        <activity android:name=".activity.ProjectListActivity" />
        <activity android:name=".activity.ProjectAddActivity" />
        <activity android:name=".activity.CustomizeRuleActivity" />
        <activity android:name=".activity.MachineLearningRuleActivity" />
        <activity android:name=".activity.ManualActivity" />
        <activity
            android:name=".activity.check.PointCheckDetailActivity"
            android:label="@string/title_activity_check_detail" />
        <activity
            android:name=".activity.test.TestBasicActivity"
            android:label="@string/title_activity_test_basic"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.check.PictureCheckActivity"
            android:label="@string/title_activity_picture_check"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.check.PictureCheckResultActivity"
            android:label="@string/title_activity_picture_check_result"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.collect.PictureSampleCollectActivity"
            android:label="@string/title_activity_picture_sample_collect"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".service.DatabaseService"
            android:enabled="true"
            android:exported="true" />
        <service
            android:name=".service.ImgIntentService"
            android:exported="false"></service>
    </application>

</manifest>